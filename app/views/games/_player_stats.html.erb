<table id='player_stats'>
  <tr>
    <th>Time</th><th>Team</th><th>Cap Number</th><th>Stat</th><th>Value</th>
  </tr>
  <% for pStat in player_stats %>
    <% if pStat.stat_type_id != @player_game_played # don't render game_played stats here %> 
    <% fields_for_player_stat(pStat) do |ps_form| %>
    <tr>
      <td class='time'><%= ps_form.text_field :time %></td>
			<td class='teams'><%= ps_form.collection_select :team_id, @teams_on_card, :id, :name  %></td>
			<td class='number'> <%= ps_form.text_field :number %> </td>
			<td class='stat_type'><%= ps_form.collection_select :stat_type, @player_stat_types, :id, :name  %></td>
			<td class='value'><%= ps_form.text_field :value %></td>
    </tr>
    <% end %>
    <% end %>
  <% end%>
</table>